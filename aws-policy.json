
{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "RDSIAMAuthentication",
      "Effect": "Allow",
      "Action": [
        "rds-db:connect"
      ],
      "Resource": [
        "arn:aws:rds-db:us-east-2:*:dbuser/*/bencox820"
      ]
    },
    {
      "Sid": "EC2SecurityGroupManagement",
      "Effect": "Allow",
      "Action": [
        "ec2:AuthorizeSecurityGroupIngress",
        "ec2:RevokeSecurityGroupIngress",
        "ec2:DescribeSecurityGroups"
      ],
      "Resource": [
        "arn:aws:ec2:us-east-2:*:security-group/*"
      ]
    },
    {
      "Sid": "RDSInstanceAccess",
      "Effect": "Allow",
      "Action": [
        "rds:DescribeDBInstances",
        "rds:DescribeDBClusters",
        "rds:DescribeDBProxies"
      ],
      "Resource": [
        "arn:aws:rds:us-east-2:*:db:*",
        "arn:aws:rds:us-east-2:*:cluster:*",
        "arn:aws:rds:us-east-2:*:db-proxy:*"
      ]
    }
  ]
}
